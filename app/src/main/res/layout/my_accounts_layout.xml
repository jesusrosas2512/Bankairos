<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.jesusrosas.kairosds.bankairos.ui.account.AccountViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/light_gray"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/common_default"
                android:paddingTop="@dimen/common_default">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/type_card"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:text="@string/type"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCards"
                android:layout_weight="1"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_default"
                tools:listitem="@layout/item_card" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvNoCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:text="No hay tarjetas registradas"
            android:background="@color/light_gray"
            android:paddingVertical="@dimen/common_max"
            setVisible="@{vm.isMsgVisible}"/>

    </RelativeLayout>
</layout>